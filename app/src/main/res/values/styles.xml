<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarImgViewStyle">
        <item name="android:background">@drawable/selector_txt_rect_background</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@color/color_tint</item>
        <item name="android:layout_width">@dimen/toolbar_size</item>
        <item name="android:layout_height">@dimen/toolbar_size</item>
        <item name="android:contentDescription">@string/img_description_normal</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
